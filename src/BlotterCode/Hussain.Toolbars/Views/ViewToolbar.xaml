<UserControl x:Class="Hussain.Toolbars.Views.ViewToolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:prism="http://www.codeplex.com/prism"
             xmlns:infra="clr-namespace:Hussain.Infra.Utility;assembly=Hussain.Infra"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
   
    <Grid Background="LightYellow" VerticalAlignment="Top">
        <Button Content="View" Command="{x:Static infra:GlobalCommands.GlobalViewCommand}" Margin="5,5" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button Content="Exit" Command="{x:Static infra:GlobalCommands.GlobalExitCommand}" Margin="5,5" HorizontalAlignment="Right" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
