<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<!-- Log4j Configuration for RPC Testing -->
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

  <!-- Set up the Console appender to go to screen -->
  <appender name="Console" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{HH:mm:ss,SSS} %-5p %c %x - %m%n" />
    </layout>
  </appender>
    
        <!-- Set up the File appender to perform rolling logs -->
   <appender name="File" class="com.ubs.ct.infrastructure.log.log4j.RollingDatedFileAppender">
        <param name="File" value="tests.log"/>
        <param name="MaxFileSize" value="10MB"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{HH:mm:ss,SSS} %-5p %c %x - %m%n"/>
        </layout>
    </appender>
  
  <category name="org.springframework">
    <priority value="info" />
  </category>
  
    <category name="org.apache">
    <priority value="info" />
  </category>

  <category name="com.ubs.ct.infrastructure">
    <priority value="info" />
  </category>

  <category name="org.hibernate">
    <priority value="info" />
  </category>
    
  <root>
    <priority value="debug" />
    <appender-ref ref="Console" />
    <appender-ref ref="File" />
  </root>
</log4j:configuration>

